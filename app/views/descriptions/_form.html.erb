<%= form_with(model: @description, local: true, url: description_new_or_edit) do |form| %>
  <% if @description.errors.any? %>
    <div id="error=explanation">
      <h2><%= "#{@description.errors.count}件のエラーを確認して下さい" %></h2>
      <ul>
        <% @description.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>  
    </div>
  <% end %>
  <ul class="form description_form">
    <div class="description_content">
      <li><%= form.label "解説" %></li>    
      <li><%= form.text_area :content %></li>
    </div>     
    <div class="submit description_submit">      
      <li><%= form.submit "登録" %></li>
    </div>  
  </ul>
<% end %>
