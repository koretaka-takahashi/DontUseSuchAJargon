<%= form_with(model: @description, local: true, url: description_new_or_edit) do |f| %>
  <% if @description.errors.any? %>
    <div id="error_explanation">
      <p><%= "#{@description.errors.count}件のエラーがあります。" %></p>
      <ol>
        <% @description.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ol>  
    </div>
  <% end %>
  <ul class="form description_form">
    <div class="description_content">
      <li><%= f.label "解説" %></li>    
      <li><%= f.text_area :content %></li>
    </div>     
    <div class="submit description_submit">      
      <li><%= f.submit "登録", data: { confirm: "確認はお済みですか？"} %></li>
    </div>  
  </ul>
<% end %>
