<ul>
  <% @terms.each do |term| %>
    <li class="term-name">
      <%= link_to "#{term.name}", term_path(term) %>
      <%= "(#{term.genre.name})" %>
    </li>
    <li class="tag-list">
      <% term.tags.each do |tag| %>
        <%= link_to tag.name, genre_tag_path(@genre, tag), class:"btn btn-primary border-dark text-white btn-sm" %>
      <% end %>
    </li>
    <li class="description-numbers">
      <%= link_to "解説(#{term.descriptions.count})", term_path(term, anchor: "descriptions-list") %>
    </li>
    <hr>
  <% end %>
</ul>
