<!DOCTYPE html>
<html>
  <head>
    <title>DontUseSuchAJargon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <h1><%= link_to "DON'T USE SUCH A JARGON", root_path %></h1>
        <% if user_signed_in? %>
            <strong><%= "ようこそ、#{current_user.name}さん！" %></strong>
            <%= link_to 'マイページ', user_path(current_user.id) %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
        <% else %>
            <%= link_to 'ログイン', new_user_session_path %>
            <%= link_to 'サインアップ', new_user_registration_path %>
        <% end %>
      </nav>

      <ul class="search-box">
        <%= search_form_for @search, url: terms_path do |f| %>
          <li><%= f.search_field :name_cont ,placeholder: '検索するテキストを入力...' %></li>
          <li><%= f.submit ("検索") , class: 'search-btn'%></li>
        <% end %>
      </ul>

      <ul class="search-box">
        <%= search_form_for @search, url: terms_path do |f| %>
          <li><%= f.label :name_or_descriptions_content_cont, "説明文も含む" %></li>
          <li><%= f.search_field :name_or_descriptions_content_cont ,placeholder: '検索するテキストを入力...' %></li>
          <li><%= f.submit ("検索") , class: 'search-btn'%></li>
        <% end %>
      </ul>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
