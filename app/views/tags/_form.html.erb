<%= form_with(model: @tag, local: true, url: tag_new_or_edit) do |form| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <p><%= "#{@tag.errors.count}件のエラーがあります。" %></p>
      <ol>
        <% @tag.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ol>  
    </div>
  <% end %>
  <ul class="form tag_form">
    <div class="tag_name">
      <li><%= form.text_field :name %></li>
    </div>     
    <div class="submit tag_submit">      
      <li><%= form.submit "登録", data: { confirm: "本当に必要なタグだけ追加して下さい。\rタグを追加してよろしいですか？"} %></li>
    </div>  
  </ul>
<% end %>
