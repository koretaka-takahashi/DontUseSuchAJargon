<%= form_with(model: @tag, local: true, url: tag_new_or_edit) do |form| %>
  <% if @tag.errors.any? %>
    <div id="error=explanation">
      <h2><%= "#{@tag.errors.count}件のエラーを確認して下さい" %></h2>
      <ul>
        <% @tag.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>  
    </div>
  <% end %>
  <ul class="form tag_form">
    <div class="tag_name">
      <li><%= form.text_field :name %></li>
    </div>     
    <div class="submit tag_submit">      
      <li><%= form.submit "登録" %></li>
    </div>  
  </ul>
<% end %>
