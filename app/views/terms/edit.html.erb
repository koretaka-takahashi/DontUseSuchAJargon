<h1>編集</h1> <!-- ジャンルは変更できなくて良い -->

<%= form_with(model: @term) do |f| %>
  <div id="term-error-area">
    <div id="error_explanation">
      <%= render partial: 'shared/message', locals: { term: @term } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Term名" %>    
    <%= f.text_field :name, id: "edit-term-for-capybara" %>
  </div>     
  <div>
    <%= f.submit "登録", class: "btn btn-primary", id: "edit-term-btn-for-capybara"%>
  </div>
<% end %>
